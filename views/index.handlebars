<h1>Burger time!</h1>


<div class="container">
    <div class="row devoured-or-not">
        <div class="col s12 l6" id="notDevoured">
            <h4>Burgers Menu</h4>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <div class="list">
                    {{#if devoured}}{{else}}
                    <button class="eaten" data-id="{{id}}">eat me!</button>
                    {{/if}}
                   {{this.burger_name}}
                </div>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col s12 l6" id="devoured">
            <h4>Burgers Devoured!</h4>
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>{{this.burger_name}}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <dr>
        <h2>Add a burger</h2>

        <form>
            <div class="form-group">
                <label class="addNewBurger" for="burgerName">Burger Name: </label>
                <input type="text" id="burgerName" name="name">
            </div>
            <button class="newBurger" id="burgerButton" type="submit">ADD BURGER</button>
        </form>


</div>