<h1>
    <span class="multicolortext">Burger time!</span>

    </h1>


<div class="container">
    <div class="row devoured-or-not">
        <div class="col-12 col-lg-6" id="notDevoured">
            <h2>Burgers Menu</h2>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <div class="list">
                    {{#if devoured}}{{else}}
                    <button class="eaten" data-id="{{id}}">eat me!</button>
                    {{/if}}
                   {{this.burger_name}}
                </div>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-12 col-lg-6" id="devoured">
            <h2>Burgers Devoured!</h2>
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>{{this.burger_name}}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <dr>
        <h2>Add a burger</h2>

        <form>
            <div class="form-group">
                <label class="addNewBurger" for="burgerName">Burger Name: </label>
                <input type="text" id="burgerName" name="name">
            </div>
            <button class="newBurger" id="burgerButton" type="submit">Submit</button>
        </form>

</div>
